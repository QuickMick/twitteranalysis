<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="H1" parent="@android:style/TextAppearance.Large">
        <item name="android:textSize">@dimen/h1</item>
        <item name="android:textColor">@color/colorTextH1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="H2" parent="@android:style/TextAppearance.Medium">
   <!--     <item name="android:textSize">@dimen/h2</item> -->
        <item name="android:textColor">@color/colorTextH2</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="H3" parent="@android:style/TextAppearance.Small">
        <!--    <item name="android:textSize">@dimen/h3</item> -->
          <item name="android:textColor">@color/colorTextH3</item>
          <item name="android:textStyle">normal</item>
      </style>


  <style name="button" parent="@android:style/TextAppearance.Medium">
      <!--    <item name="android:textSize">@dimen/h3</item> -->
        <item name="android:textColor">@color/colorTextButton</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="info" parent="@android:style/TextAppearance.Large">
        <!--    <item name="android:textSize">@dimen/h3</item> -->
        <item name="android:textColor">@color/colorInfoHeading</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="input" parent="@android:style/TextAppearance.Medium">
        <!--    <item name="android:textSize">@dimen/h3</item> -->
       <item name="android:textColor">@color/colorInputText</item>
        <item name="android:textColorHint">@color/colorInputTextHint</item>
        <item name="android:textStyle">normal</item>


        <!--
        android:backgroundTint="@color/colorInputBG"
        android:textColor="@color/colorInputText"
        android:textColorHint="@color/colorInputTextHint"

-->
    </style>




    <style name="listH1" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/colorTextH1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="listH2" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/colorTextH2</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="listH3" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/colorTextH3</item>
        <item name="android:textStyle">normal</item>
    </style>

    </resources>
